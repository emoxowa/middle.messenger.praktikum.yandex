<section class="sign">
  <form class="sign__form" novalidate>
    <h2 class="sign__title">{{title}}</h2>
    <div class="signup__input-container">
    <div class="sign__input-group">
    <input required type="email" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Почта</label>
    </div>
    <div class="sign__input-group">
    <input required type="text" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Логин</label>
    </div>
    <div class="sign__input-group">
    <input required type="text" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Имя</label>
    </div>
    <div class="sign__input-group">
    <input required type="text" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Фамилия</label>
    </div>
    <div class="sign__input-group">
    <input required type="tel" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Телефон</label>
    </div>
    <div class="sign__input-group">
    <input required type="password" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Пароль</label>
    </div>
    <div class="sign__input-group">
    <input required type="password" class="sign__input" placeholder="">
    <label class="sign__input-placeholder">Пароль (ещё раз)</label>
    </div>
    </div>
    {{{ button }}}
    <a href="/signin" class="sign__link link">{{sign_link}}</a>
  </form>
</section>