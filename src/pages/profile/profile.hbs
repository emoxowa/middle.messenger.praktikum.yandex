<section class="profile">
  <div class="profile__left-block">
    <a href="/" class="link">
    <div class="profile__round-link">
    </div>
    </a>
  </div>
  <div class="profile__right-block">
    <form action="" class="profile__form">
      <div class="profile__avatar-container">
      {{{avatar}}}
      </div>
      <h2 class="profile__title">{{first_name}}</h2>
      <label class="profile__input-title">
        Почта
        <input type="email" name="email" class="profile__input" placeholder={{email}} readonly>
      </label>
      <label class="profile__input-title">
        Логин
        <input type="text" name="login" class="profile__input" placeholder={{login}} readonly>
      </label>
      <label class="profile__input-title">
        Имя
        <input type="text" name="first_name" class="profile__input" placeholder={{first_name}} readonly>
      </label>
      <label class="profile__input-title">
        Фамилия
        <input type="text" name="second_name" class="profile__input" placeholder={{second_name}} readonly>
      </label>
      <label class="profile__input-title">
        Имя в чате
        <input type="text" name="display_name" class="profile__input" placeholder={{display_name}} readonly>
      </label>
      <label class="profile__input-title">
        Телефон
        <input type="tel" name="phone" class="profile__input" placeholder={{phone}} readonly>
      </label>
      <div class="profile__space"></div>
      <a href="/changeinfo" class="profile__link link">Изменить данные</a>
      <a href="/changepassword" class="profile__link link">Изменить пароль</a>
    </form>
  </div>
</section>
